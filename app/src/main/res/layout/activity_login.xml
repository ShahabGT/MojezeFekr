<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/login_relativetop"
        android:background="@drawable/header"
        android:layout_height="wrap_content"
        >
        <projects.shahabgt.com.onlinelibrary.style.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ورود به حساب کاربری"
            android:textColor="@color/green"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            android:text="exit"
            android:id="@+id/login_back"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/login_relativetop"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/shape"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/loginicon"/>

                <projects.shahabgt.com.onlinelibrary.style.FontEditText
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#637083"
                    android:inputType="number"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/login_number"
                    android:textDirection="ltr"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:textColor="#000000"
                    android:background="@drawable/shape2"
                    android:layout_marginBottom="1dp"
                    android:hint="شماره تلفن"/>
                <projects.shahabgt.com.onlinelibrary.style.FontEditText
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:padding="7dp"
                    android:maxLines="1"
                    android:textColorHint="#637083"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:id="@+id/login_pass"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape2"
                    android:hint="رمز ورود"/>

                <Button
                    android:layout_width="match_parent"
                    android:textColor="#ffffff"
                    android:id="@+id/login_signon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:background="@drawable/shape3"
                    android:layout_marginBottom="10dp"
                    android:text="ورود"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:id="@+id/login_signup"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="5dp"
                        style="@style/Base.TextAppearance.AppCompat.Button"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape3"
                        android:layout_marginBottom="10dp"
                        android:text="ثبت نام"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#ffffff"
                        android:id="@+id/login_resetpass"
                        android:layout_marginLeft="5dp"
                        style="@style/Base.TextAppearance.AppCompat.Button"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape3"
                        android:layout_marginBottom="10dp"
                        android:text="فراموشی رمز"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
