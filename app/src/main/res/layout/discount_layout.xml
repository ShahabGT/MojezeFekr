<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/shape2"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/discount"/>
        <projects.shahabgt.com.onlinelibrary.style.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کد تخفیف خود را وارد کنید"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/green"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            />
        <projects.shahabgt.com.onlinelibrary.style.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="در غیر این صورت کلید پرداخت را بزنید."
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/green"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/discount_btn"
                android:padding="7dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@drawable/shape2xx"
                android:text="بررسی"/>
        <projects.shahabgt.com.onlinelibrary.style.FontEditText
            android:layout_width="match_parent"
            android:padding="7dp"
            android:layout_height="wrap_content"
            android:textColorHint="#637083"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/discount_number"
            android:textDirection="ltr"
            android:maxLines="1"
            android:maxLength="20"
            android:textColor="#000000"
            android:background="@drawable/shape2"
            android:hint="کد تخفیف"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content">
            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ریال"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/discount_price"
                android:paddingRight="10dp"
                android:id="@+id/discount_price_tag"
                android:textColor="@color/primary_dark"
                style="@style/Base.TextAppearance.AppCompat.Medium" />
            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:paddingLeft="10dp"
                android:layout_toLeftOf="@+id/discount_text"
                android:paddingRight="10dp"
                android:id="@+id/discount_price"
                android:textColor="@color/primary_dark"
                style="@style/Base.TextAppearance.AppCompat.Medium" />
            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:id="@+id/discount_text"
                android:text="مبلغ قابل پرداخت:"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:textColor="@color/green"
                style="@style/Base.TextAppearance.AppCompat.Medium" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/discount_cancel"
                android:padding="7dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:focusable="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:background="@drawable/shape2xx"
                android:text="انصراف"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="7dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:id="@+id/discount_buy"
                android:textDirection="ltr"
                android:textColor="@color/white"
                android:background="@drawable/shape2xx"
                android:text="پرداخت"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>