<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/sendpost2_relativetop"
        android:background="@drawable/header"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        >
        <projects.shahabgt.com.onlinelibrary.style.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="آپلود صدای درس"
            android:textColor="@color/green"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"

                app:cardElevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:focusable="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/green"
                        android:padding="10dp"
                        android:layout_height="wrap_content">
                        <projects.shahabgt.com.onlinelibrary.style.FontTextView
                            android:layout_width="match_parent"
                            android:layout_centerVertical="true"
                            android:id="@+id/sendpost2_name"
                            android:text="صدا های مربوط به دوره معرفی شده را آپلود کنید"
                            android:paddingRight="5dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/white"
                            style="@style/Base.TextAppearance.AppCompat.Medium" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:id="@+id/sendpost2_linear"
                        android:layout_height="wrap_content">


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:visibility="gone"
                app:cardElevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:focusable="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sendpost2_player"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <ImageView
                                android:id="@+id/sendpost2_player_play"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:src="@mipmap/ic_play" />

                            <ImageView
                                android:id="@+id/sendpost2_player_pause"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="6"
                                android:src="@mipmap/ic_pause"
                                android:visibility="gone" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:paddingBottom="5dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp" >

                                <SeekBar
                                    android:id="@+id/sendpost2_player_seekbar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"/>
                            </FrameLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_height="wrap_content">
                            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sendpost2_player_runtime"
                                android:text="00:00"/>
                            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="/"/>
                            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                                android:layout_width="wrap_content"
                                android:id="@+id/sendpost2_player_totaltime"
                                android:layout_height="wrap_content"
                                android:text="00:00"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                app:cardElevation="5dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:focusable="true"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Button"

                android:text="در صورت آپلود صدای تمامی درس ها کلید زیر را بزنید."/>
            <Button
                android:layout_width="match_parent"
                android:textColor="#ffffff"
                android:id="@+id/sendpost2_upload"
                android:layout_margin="15dp"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Button"
                android:background="@drawable/shape3"
                android:text="اتمام"/>
                    <projects.shahabgt.com.onlinelibrary.style.FontTextView
                        android:visibility="gone"
                        android:id="@+id/sendpost2_editText"
                        android:layout_width="match_parent"
                        android:layout_margin="15dp"
                        android:layout_height="wrap_content"
                        style="@style/Base.TextAppearance.AppCompat.Button"

                        android:text="در صورت آپلود نکردن صدا، صدای قبلی استفاده خواهد شد."/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>