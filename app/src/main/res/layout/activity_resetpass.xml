<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".ResetpassActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/resetpass_relativetop"
        android:background="@drawable/header"
        android:layout_height="wrap_content"
        >
        <projects.shahabgt.com.onlinelibrary.style.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فراموشی رمز ورود"
            android:textColor="@color/green"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/Base.TextAppearance.AppCompat.Large"
            />
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back"
            android:text="exit"
            android:id="@+id/resetpass_back"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/resetpass_relativetop"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/shape"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/resetpassicon"/>
                <projects.shahabgt.com.onlinelibrary.style.FontTextView
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:text="برای بازیابی رمز ورود خب شماره تلفن خود را وارد کنید، رمز عبور برای شما ارسال می شود."/>
                <projects.shahabgt.com.onlinelibrary.style.FontEditText
                    android:layout_width="match_parent"
                    android:padding="7dp"
                    android:layout_height="wrap_content"
                    android:textColorHint="#637083"
                    android:inputType="number"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/resetpass_number"
                    android:textDirection="ltr"
                    android:maxLines="1"
                    android:maxLength="11"
                    android:textColor="#000000"
                    android:background="@drawable/shape2"
                    android:layout_marginBottom="5dp"
                    android:hint="شماره تلفن"/>

                <Button
                    android:layout_width="match_parent"
                    android:textColor="#ffffff"
                    android:id="@+id/signup_register"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    style="@style/Base.TextAppearance.AppCompat.Button"
                    android:background="@drawable/shape3"
                    android:layout_marginBottom="10dp"
                    android:text="بازیابی"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
