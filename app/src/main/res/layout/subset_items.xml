<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp"

        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        android:focusable="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/subset_items_card"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_height="wrap_content">

           <RelativeLayout
               android:layout_width="wrap_content"
               android:orientation="vertical"
               android:gravity="right"
               android:layout_height="wrap_content">
               <projects.shahabgt.com.onlinelibrary.style.FontTextView
                   android:layout_width="wrap_content"
                   android:id="@+id/subset_items_subject"
                   android:text="تعداد فایل :"
                   android:layout_alignParentRight="true"
                   android:layout_height="wrap_content"
                   android:textColor="@color/primary_dark"
                   android:padding="5dp"
                   android:textStyle="bold"
                   style="@style/Base.TextAppearance.AppCompat.Body2" />
               <projects.shahabgt.com.onlinelibrary.style.FontTextView
                   android:layout_width="wrap_content"
                   android:layout_alignParentRight="true"
                   android:id="@+id/subset_items_subset"
                   android:text="توضیحات"
                   android:layout_below="@id/subset_items_subject"
                   android:layout_height="wrap_content"
                   android:textColor="@color/darkgray"
                   android:padding="5dp"
                   android:textStyle="bold"
                   style="@style/Base.TextAppearance.AppCompat.Body2" />


           </RelativeLayout>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:id="@+id/subset_items_img"
                android:src="@drawable/audio"/>
            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/subset_items_id"
                android:layout_height="wrap_content" />
            <projects.shahabgt.com.onlinelibrary.style.FontTextView
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:id="@+id/subset_items_s_id"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>